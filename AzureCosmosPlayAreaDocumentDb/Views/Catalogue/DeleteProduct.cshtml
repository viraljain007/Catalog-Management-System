@model AzureCosmosPlayAreaDocumentDb.Models.Product

@{
    ViewBag.Title = "DeleteProduct";
}

<h2>DeleteProduct</h2>

@using (Html.BeginForm("DeleteProduct", "Catalogue", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.Id)

    <div class="form-horizontal">
        <div class="form-group">
            <label class="col-sm-2 control-label">ProductId</label>
            <div class="col-sm-6">
                @Html.TextBoxFor(m => m.Id, new { @class = "form-control", disabled = "disabled" })
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-2 control-label">Product Name</label>
            <div class="col-sm-6">
                @Html.TextBoxFor(m => m.Name, new { @class = "form-control", disabled = "disabled" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button type="submit" class="btn btn-primary">Delete</button>
                <a href="@Url.Action("CatalogIndex")" class="btn btn-default">Back</a>
            </div>
        </div>
    </div>
}