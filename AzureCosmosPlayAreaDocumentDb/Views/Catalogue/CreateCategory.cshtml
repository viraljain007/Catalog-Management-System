@model AzureCosmosPlayAreaDocumentDb.Models.Category

@{
    ViewBag.Title = "CreateCategory";
}

<h2>Create a Category</h2>

@using (Html.BeginForm("Create", "Catalogue", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.Id)

    <div class="form-horizontal">
        <div class="form-group">
            <label class="col-sm-2 control-label">Name</label>
            <div class="col-sm-6">
                @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Name)
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                @if (Model.Id.Equals(default(Guid)))
                {
                    <button type="submit" class="btn btn-primary">Create Category</button>
                }
                else
                {
                    <button type="submit" class="btn btn-primary">Update Category</button>
                }

                <a href="@Url.Action("CatalogIndex")" class="btn btn-default">Back</a>
            </div>
        </div>
    </div>
}

@section Scripts
{
    @Scripts.Render("~/bundles/jqueryval")
}